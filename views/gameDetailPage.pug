extends layout

block content
    div(class="p-10")
        img(src=game.imageUrl, alt="")
        h2(class="text-2xl") Game : #{game.name}
        p(class="sm:max-w-[70%]") Description : #{game.description}
        p(class="text-sm text-sky-400 mt-2") Created : #{game.createdFormatted}
        p(class="text-sm text-sky-400") Updated : #{game.updatedFormatted}

        if game.categories.length > 0 
            section(class="mt-4 flex gap-2")
                each category in game.categories
                    span(class="px-3 py-1 rounded-sm bg-sky-600")= category.name

    div(class="flex gap-5 px-10") 
        form(action=`/catalog/games/delete/${game._id}` method="POST")
            button(type="submit" class="px-4 py-2 bg-red-600 rounded-sm") Delete game
        
        a(href=`/catalog/games/update/${game._id}` class="px-4 py-2 bg-yellow-600 rounded-sm") Edit game

    if error    
        h2(class="text-xl text-red-600 px-10 py-5")= error
